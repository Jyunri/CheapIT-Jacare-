<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bege"
    tools:context="br.com.cdf.cheapit.MyCouponsFragment">

    <TextView
        android:id="@+id/tvMyCouponsTitle"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="MEUS CUPONS"
        android:background="@color/grey"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="13sp"
        />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radioAtivos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rbtn_selector"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="ATIVOS"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@drawable/rbtn_textcolor_selector" />

        <RadioButton
            android:id="@+id/radioEncerrados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rbtn_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="ENCERRADOS"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@drawable/rbtn_textcolor_selector" />


    </RadioGroup>


    <ListView
        android:id="@+id/lvCoupons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="60dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="5.0sp"
        >

    </ListView>

</LinearLayout>
