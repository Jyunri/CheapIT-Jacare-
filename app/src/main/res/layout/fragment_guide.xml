<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bege"
    tools:context="br.com.cdf.cheapit.GuideFragment">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:background="@color/grey"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/ibSortPlaces"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:tint="@color/white"
            android:src="@drawable/ic_sort"
            android:scaleType="centerInside"/>
        <Spinner
            android:id="@+id/spSortPlaces"
            android:layout_width="5dp"
            android:layout_height="0dp">
        </Spinner>

        <TextView
            android:id="@+id/tvPlaces"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="LOCAIS"
            android:background="@color/grey"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="13sp"
            />
        <ImageButton
            android:id="@+id/ibFilterPlaces"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:tint="@color/white"
            android:layout_gravity="right"
            android:src="@drawable/ic_filter"
            android:scaleType="centerInside"/>
        <Spinner
            android:id="@+id/spFilterPlaces"
            android:layout_width="5dp"
            android:layout_height="0dp"
            android:layout_gravity="right">
        </Spinner>

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_height="match_parent"
            android:scrollbars="horizontal|vertical"
            android:layout_width="match_parent"
            >

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal" >


                <RadioButton
                    android:id="@+id/radioMap"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rbtn_selector"
                    android:button="@null"
                    android:drawableRight="@drawable/ic_location_on_white_24dp"
                    android:paddingRight="10dp"
                    android:tint="@color/bege"
                    android:checked="true"
                    />


                <RadioButton
                    android:id="@+id/radioRestaurants"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rbtn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="RESTAURANTES"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@drawable/rbtn_textcolor_selector" />

                <RadioButton
                    android:id="@+id/radioStores"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rbtn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="LOJAS"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@drawable/rbtn_textcolor_selector" />

                <RadioButton
                    android:id="@+id/radioServices"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rbtn_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="SERVIÃ‡OS"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@drawable/rbtn_textcolor_selector" />





            </RadioGroup>

        </HorizontalScrollView>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.gms.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                class="com.google.android.gms.maps.SupportMapFragment"
                />
        </LinearLayout>

        <ListView
            android:id="@+id/lvPlaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="60dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="5.0sp"
            >

        </ListView>

    </FrameLayout>
</LinearLayout>
