<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:fitsSystemWindows="true"
    android:background="@drawable/default_background">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="250dp"
        android:layout_height="220dp"
        android:layout_marginTop="-10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cheapit_logo2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCadastro"
        android:text="Cadastre-se para ter acesso à descontos nos estabelecimentos próximos à você!"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="-5dp"
        android:paddingBottom="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/imgLogo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/tvCadastro"
        android:background="@drawable/rectangle_bege"
        android:src="@drawable/rectangle_bege"
        android:id="@+id/loginRectangle"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:weightSum="3"
        android:gravity="center">

        <TextView
            android:text="Use uma conta Google ou seu perfil do Facebook para fazer login:"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/dark_red"
            android:textSize="13sp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/tvLoginText" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:id="@+id/ibFbLogin"
            android:gravity="center"
            android:background="@null"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/fb_loginbutton"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ibGoogleLogin"
            android:background="@null"
            android:gravity="center"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:layout_marginTop="-10dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:src="@drawable/google_loginbutton"/>


    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/tvWebSite"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvWebSite"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/www_cheapit_com_br"
        android:textColor="@color/white"
        android:textSize="15sp"
        />


</RelativeLayout>