<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/default_background">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="250dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/cheapit_logo2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvCadastro"
        android:text="Cadastre-se para ter acesso à descontos nos estabelecimentos próximos à você!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="-10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/imgLogo"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/rectangle"
        android:id="@+id/loginRectangle"
        android:layout_below="@+id/tvCadastro"
        android:paddingBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" />


    <TextView
        android:text="Use uma conta Google ou seu perfil do Facebook para fazer login:"
        android:textAlignment="center"
        android:layout_below="@id/tvCadastro"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dark_red"
        android:id="@+id/tvLoginText" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:id="@+id/ibFbLogin"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvLoginText"
        android:background="@drawable/fb_loginbutton"/>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:id="@+id/ibGoogleLogin"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ibFbLogin"
        android:layout_marginTop="10dp"
        android:background="@drawable/google_loginbutton"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/tvWebSite"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvWebSite"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/www_cheapit_com_br"
        android:textColor="@color/white"
        android:textSize="15sp"
        />


</RelativeLayout>